syntax on
filetype on
filetype indent on
filetype plugin on
set wildmenu
set showcmd
set hlsearch
set autoindent
set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab
set showmatch
set statusline=
set statusline=\ %F\ %M\ %Y\ %R
set statusline+=%=
set statusline+=\ ascii:\ %b\ hex:\ 0x%B\ row:\ %l\ col:\ %c\ percent:\ %p%%
set laststatus=2
hi StatusLine ctermbg=none cterm=bold
